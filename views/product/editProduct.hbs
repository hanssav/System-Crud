{{> head}}
{{> navbar}}

<div class="container text center pt-5">
    <form action="/article" method="POST" enctype="multipart/form-data">
        <div class="text-center">
            <h3>Update Product</h3>
        </div>
        <div class="file-input-group text-start">
            <input type="file" hidden id="file" aria-label="file upload" name="image" onchange="handleChange()">
            <label for="file">Upload Photo Product <img src="/static/icons/image.png" alt="Add Product Image"></label>
        </div>
        <div id="preview-thumbnail" class="text-start"></div>
        <div>
            <input type="text" placeholder="Product Name" name="name">
        </div>

        <div>
            <textarea placeholder="Description product" rows="8" name="description"></textarea>
        </div>
        <div>
            <input type="number" placeholder="Price" name="price">
        </div>
        <div>
            <input type="number" placeholder="Stock" name="stock">
        </div>


        <div class="text-center">
            <button type="submit">Update Product</button>
        </div>
    </form>
</div>